<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#7D1813" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="@color/redmap_red"
                 android:endColor="#C4251E"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#7D1813" />
             <solid  android:color="#A31F19"/>       
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#7D1813" />
             <gradient 
               	 android:angle="-90"   
                 android:startColor="@color/redmap_red"
                 android:endColor="#A31F19" />
         </shape>
     </item>
</selector>